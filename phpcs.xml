<?xml version="1.0"?>
<ruleset name="CmsForNerd Standards">
    <description>PSR-12 Compliance for CMSForNerd v3.1</description>

    <file>index.php</file>
    <file>includes/</file>
    <file>themes/</file>

    <exclude-pattern>vendor/*</exclude-pattern>

    <rule ref="PSR12">
        <exclude name="PSR1.Files.SideEffects.FoundWithSymbols"/>
    </rule>

    <arg name="encoding" value="utf-8"/>
    <arg name="colors"/>
</ruleset>
